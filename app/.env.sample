# Network Troubleshooting Assistant Configuration
# Make a copy of this file named ".env" and customize for your environment

# Document storage settings
DOCS_DIR=./network_docs
DB_DIR=./chroma_db

# Chunking and search settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SEARCH_RESULTS=5

# Ollama settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=network-assistant
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
USE_OLLAMA_EMBEDDINGS=true
OLLAMA_EMBEDDING_BATCH_SIZE=10

# Application settings
PORT=5000
DEBUG_MODE=False

# ChromaDB Telemetry settings
ANONYMIZED_TELEMETRY=False